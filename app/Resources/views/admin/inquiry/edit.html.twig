{% extends 'base.html.twig' %}

{% block body %}

<table class="table">
    <tr>
        <th>ID</th>
        <td>{{ inquiry.id }}</td>
    </tr>
    <tr>
        <th>お名前</th>
        <td>{{ inquiry.name }}</td>
    </tr>
    <tr>
        <th>メールアドレス</th>
        <td>{{ inquiry.email }}</td>
    </tr>
    <tr>
        <th>電話番号</th>
        <td>{{ inquiry.tel }}</td>
    </tr>
    <tr>
        <th>種別</th>
        <td>{{ inquiry.type }}</td>
    </tr>
     <tr>
        <th>内容</th>
        <td>{{ inquiry.content }}</td>
    </tr>
</table>

{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

<table class="table">
    <tr>
        <th>ステータス</th>
        <td>
            {{ form_widget(form.processStatus, {"attr": {"class":"form-control"}}) }}
            {{ form_errors(form.processStatus) }}
        </td>
    </tr>
    <tr>
        <th>対応メモ</th>
        <td>
            {{ form_widget(form.processMemo, {"attr": {"class":"form-control"}}) }}
            {{ form_errors(form.processMemo) }}
        </td>
    </tr>
</table>

{{ form_end(form) }}

{% endblock %}